plugins {
    id 'com.android.application'
    id 'org.jetbrains.kotlin.android' version '1.9.0' apply false
}

apply plugin: 'com.android.application'
apply plugin: 'org.jetbrains.kotlin.android'

android {
    signingConfigs {
        create("release") {
            storeFile = file(System.getenv("LEVI_STORE_FILE") ?: (project.findProperty("LEVI_STORE_FILE") as String))
            storePassword = System.getenv("LEVI_STORE_PASSWORD") ?: (project.findProperty("LEVI_STORE_PASSWORD") as String)
            keyAlias = System.getenv("LEVI_KEY_ALIAS") ?: (project.findProperty("LEVI_KEY_ALIAS") as String)
            keyPassword = System.getenv("LEVI_KEY_PASSWORD") ?: (project.findProperty("LEVI_KEY_PASSWORD") as String)
            storeType = System.getenv("LEVI_STORE_TYPE") ?: (project.findProperty("LEVI_STORE_TYPE") as String)
        }
    }
    namespace 'com.levia.wellness'
    compileSdk 35

    defaultConfig {
        applicationId "com.levia.wellness"
        minSdk 24
        targetSdk 35
        versionCode 2
        versionName "1.0"
    }

    buildTypes {
        release {
            minifyEnabled false
            proguardFiles getDefaultProguardFile('proguard-android-optimize.txt'), 'proguard-rules.pro'
        }
    }
}

dependencies {
    implementation 'androidx.core:core-ktx:1.13.1'
    implementation 'androidx.activity:activity-ktx:1.9.2'
}